<Window x:Class="VisaManager.AddClient"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Add Client" Height="550" Width="400">
    <ScrollViewer Margin="10">
        <StackPanel>

            <TextBlock Text="Name" />
            <TextBox x:Name="NameTextBox" Margin="0,0,0,10"/>

            <TextBlock Text="Passport Number" />
            <TextBox x:Name="PassportNoTextBox" Margin="0,0,0,10"/>

            <TextBlock Text="Email" />
            <TextBox x:Name="EmailTextBox" Margin="0,0,0,10"/>

            <TextBlock Text="Visa Type" />
            <Grid Margin="0,0,0,10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2*" />
                    <!-- ComboBox -->
                    <ColumnDefinition Width="3*" />
                    <!-- Requirement -->
                    <ColumnDefinition Width="1.5*" />
                    <!-- Valid Days -->
                </Grid.ColumnDefinitions>

                <ComboBox x:Name="VisaTypeComboBox"
              Grid.Column="0"
              SelectionChanged="VisaTypeComboBox_SelectionChanged"/>

                <TextBlock x:Name="VisaRequirementText"
               Grid.Column="1"
               Margin="10,0,0,0"
               TextWrapping="Wrap"
               VerticalAlignment="Center"
               Foreground="DarkSlateGray"
               FontStyle="Italic"/>

                <TextBlock x:Name="VisaDaysText"
               Grid.Column="2"
               Margin="10,0,0,0"
               TextWrapping="Wrap"
               VerticalAlignment="Center"
               Foreground="DarkBlue"
               FontWeight="Bold"/>
            </Grid>

            <TextBlock Text="Company" />
            <ComboBox x:Name="CompanyComboBox" Width="200" Height="25" Margin="10" />

            <TextBlock Text="Expire Date" />
            <DatePicker x:Name="ExpireDatePicker" Margin="0,0,0,10"/>

            <TextBlock Text="Country Origin" />
            <ComboBox x:Name="CountryComboBox" Margin="0,0,0,10"/>

            <TextBlock Text="Passport File (image/pdf)" />
            <Button Content="Upload File" Click="UploadFile_Click" Margin="0,0,0,5"/>
            <TextBlock x:Name="PassportPathText" TextWrapping="Wrap" Margin="0,0,0,10"/>

            <Button Content="Save Client" Click="SaveClient_Click" Height="30" Background="LightGreen"/>
        </StackPanel>
    </ScrollViewer>
</Window>
