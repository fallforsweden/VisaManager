<Window x:Class="VisaManager.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:mtrl="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:local="clr-namespace:VisaManager"
        mc:Ignorable="d"
        Title="Visa Manager" Height="768" Width="1290"
        Background="#f2f4f8"
        WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <Style TargetType="Button">
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Padding" Value="8"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Background" Value="#4CAF50"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="4"
                                SnapsToDevicePixels="True">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#388E3C"/>
                </Trigger>
            </Style.Triggers>


        </Style>

        <Style TargetType="TextBlock">
            <Setter Property="Margin" Value="5"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>

        <Style TargetType="Border">
            <Setter Property="CornerRadius" Value="4"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#ddd"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="Margin" Value="5"/>
        </Style>

    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Left Navigation Panel -->
        <Border Grid.Column="0" Background="#e9ecef">
            <StackPanel>
                <TextBlock x:Name="AppTitle" Text="Visa Manager" 
                   Foreground="{DynamicResource PrimaryHueMidBrush}"
                   Cursor="Hand"
                   Margin="16,0,0,0"
                   MouseLeftButtonDown="AppTitle_MouseLeftButtonDown">
                    <TextBlock.Style>
                        <Style TargetType="TextBlock" BasedOn="{StaticResource MaterialDesignHeadline6TextBlock}">
                            <Setter Property="Foreground" Value="{DynamicResource PrimaryHueMidBrush}"/>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="TextDecorations" Value="Underline"/>
                                    <Setter Property="Foreground" Value="{DynamicResource PrimaryHueDarkBrush}"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </TextBlock.Style>
                </TextBlock>

                <Border Margin="10">
                    <StackPanel>
                        <TextBlock Text="Visa" FontWeight="Bold" FontSize="16" Margin="0 0 0 5"/>
                        <Button Content="Add" Style="{StaticResource MaterialDesignRaisedButton}" HorizontalAlignment="Stretch" Click="AddVisa_Click" Margin="0 0 0 5"/>
                        <Button Content="Visa List" 
                                Style="{StaticResource MaterialDesignRaisedButton}"
                                HorizontalAlignment="Stretch" Click="OpenVisaList_Click"/>

                    </StackPanel>
                </Border>

                <Border Margin="10">
                    <StackPanel>
                        <TextBlock Text="Client" FontWeight="Bold" FontSize="16" Margin="0 0 0 5"/>
                        <Button Content="Add" HorizontalAlignment="Stretch" Click="OpenAddClient" Style="{StaticResource MaterialDesignRaisedButton}" Margin="0 0 0 5" />
                        <Button Content="Client List" HorizontalAlignment="Stretch" Click="OpenPreviewClient" Style="{StaticResource MaterialDesignRaisedButton}" Margin="0 0 0 5" />
                    </StackPanel>
                </Border>

                <Border Margin="10">
                    <StackPanel>
                        <TextBlock Text="Company" FontWeight="Bold" FontSize="16" Margin="0 0 0 5"/>
                        <Button Content="Add" HorizontalAlignment="Stretch" Click="OpenAddCompany" Style="{StaticResource MaterialDesignRaisedButton}" Margin="0 0 0 5"/>
                        <Button Content="Company List" HorizontalAlignment="Stretch" Click="OpenPreviewCompany" Style="{StaticResource MaterialDesignRaisedButton}" Margin="0 0 0 5"/>
                    </StackPanel>
                </Border>

            </StackPanel>

            


        </Border>




        <!-- Main Content Area -->
        <Border Grid.Column="1" Margin="10">
            <Grid x:Name="ContentPanel">
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition Height="0*"/>
                </Grid.RowDefinitions>
                <!-- Default content when nothing is selected -->
                <TextBlock Text="Select an option from the left menu" 
                   HorizontalAlignment="Center"
                   FontSize="16"
                   Foreground="#666" Height="21" Width="252"/>

                <materialDesign:Snackbar x:Name="MySnackbar"
                   MessageQueue="{materialDesign:MessageQueue}"
                   HorizontalAlignment="Left" Height="0" Margin="0,680,0,0" VerticalAlignment="Top" Width="288"/>

                <materialDesign:DialogHost x:Name="RootDialog"/>
            </Grid>
            
            
        </Border>


    </Grid>

    
    
    
    
</Window>