<Window x:Class="VisaManager.DetailClient"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Client Details" Height="850" Width="400">
    <StackPanel Margin="20" VerticalAlignment="Top">

        <TextBlock Text="Name:" FontWeight="Bold"/>
        <TextBlock x:Name="NameText" Margin="0,0,0,10"/>

        <TextBlock Text="Passport Number:" FontWeight="Bold"/>
        <TextBlock x:Name="PassportNumberText" Margin="0,0,0,10"/>

        <TextBlock Text="Email:" FontWeight="Bold"/>
        <TextBlock x:Name="EmailText" Margin="0,0,0,10"/>

        <TextBlock Text="Visa Type:" FontWeight="Bold"/>
        <TextBlock x:Name="VisaTypeText" Margin="0,0,0,10"/>

        <TextBlock Text="Expire Date:" FontWeight="Bold"/>
        <TextBlock x:Name="ExpireDateText" Margin="0,0,0,10"/>

        <TextBlock Text="Country Origin:" FontWeight="Bold"/>
        <TextBlock x:Name="CountryText" Margin="0,0,0,10"/>

        <TextBlock Text="Company:" FontWeight="Bold"/>
        <TextBlock x:Name="CompanyText" Margin="0,0,0,10"/>

        <TextBlock>
            <Run Text="Passport: " />
            <Hyperlink x:Name="PassportLink" Click="OpenFile_Click">Open</Hyperlink>
        </TextBlock>


        <Button Content="Edit" Width="80" Margin="10" Click="Edit_Click"/>
        <Button Content="Delete" Width="80" Margin="10" Click="Delete_Click"/>
    </StackPanel>
</Window>
