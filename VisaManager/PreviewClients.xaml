<Window x:Class="VisaManager.PreviewClients"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Preview Clients" Height="450" Width="600">
    <Grid>
        <DataGrid x:Name="ClientsDataGrid"
                  AutoGenerateColumns="False"
                  IsReadOnly="True"
                  LoadingRow="ClientsDataGrid_LoadingRow"
                  Margin="10">

            <DataGrid.Columns>
                <DataGridTemplateColumn Header="Name" Width="*">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding Name}"
                       Foreground="Blue"
                       Cursor="Hand"
                       TextDecorations="Underline"
                       MouseLeftButtonUp="Name_Click"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
                <DataGridTextColumn Header="Expire Date" Binding="{Binding ExpireDate}" Width="*"/>
                <DataGridTextColumn Header="Country" Binding="{Binding Country}" Width="*"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>
