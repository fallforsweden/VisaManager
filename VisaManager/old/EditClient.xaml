<Window x:Class="VisaManager.EditClient"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Edit Client" Height="550" Width="400">
    <ScrollViewer>
        <StackPanel Margin="20">

            <TextBlock Text="Name:" FontWeight="Bold"/>
            <TextBox x:Name="NameTextBox" Margin="0,0,0,10"/>

            <TextBlock Text="Passport Number:" FontWeight="Bold"/>
            <TextBox x:Name="PassportNumberTextBox" Margin="0,0,0,10"/>

            <TextBlock Text="Email:" FontWeight="Bold"/>
            <TextBox x:Name="EmailTextBox" Margin="0,0,0,10"/>

            <TextBlock Text="Visa Type:" FontWeight="Bold"/>
            <ComboBox x:Name="VisaComboBox" SelectionChanged="VisaComboBox_SelectionChanged" Margin="0,0,0,10"/>

            <TextBlock Text="Visa Requirement:" FontWeight="Bold"/>
            <TextBlock x:Name="VisaRequirementText" Margin="0,0,0,10"/>

            <TextBlock Text="Visa Valid Days:" FontWeight="Bold"/>
            <TextBlock x:Name="VisaValidDaysText" Margin="0,0,0,10"/>

            <TextBlock Text="Company" />
            <ComboBox x:Name="CompanyComboBox" Width="200" Height="25" Margin="10" />

            <TextBlock Text="Expire Date:" FontWeight="Bold"/>
            <DatePicker x:Name="ExpireDatePicker" Margin="0,0,0,10"/>

            <TextBlock Text="Country Origin:" FontWeight="Bold"/>
            <ComboBox x:Name="CountryComboBox" Margin="0,0,0,10"/>

            <TextBlock Text="Passport Photo:" FontWeight="Bold"/>
            <Button Content="Select Photo" Click="SelectPhoto_Click" Margin="0,0,0,10"/>
            <Image x:Name="PassportImage" Height="100" Stretch="Uniform" Margin="0,0,0,10"/>

            <Button Content="Save Changes" Click="SaveButton_Click" Height="30" Width="120" HorizontalAlignment="Center" Margin="0,10,0,0"/>
        </StackPanel>
    </ScrollViewer>
</Window>
