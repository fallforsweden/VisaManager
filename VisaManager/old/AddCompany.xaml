<Window x:Class="VisaManager.AddCompany"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Add Company" Height="850" Width="400">
    <ScrollViewer Margin="10">
        <StackPanel>

            <TextBlock Text="Name" />
            <TextBox x:Name="NameTextBox" Margin="0,0,0,10"/>

            <TextBlock Text="Contact" />
            <TextBox x:Name="ContactTextBox" Margin="0,0,0,10"/>

            <TextBlock Text="Email" />
            <TextBox x:Name="EmailTextBox" Margin="0,0,0,10"/>

            <TextBlock Text="Akta" />
            <Button Content="Upload File" Click="UploadAkta_Click" Margin="0,0,0,5"/>
            <TextBlock x:Name="AktaPathText" TextWrapping="Wrap" Margin="0,0,0,10"/>

            <TextBlock Text="SK Kemenkumham" />
            <Button Content="Upload File" Click="SK_Click" Margin="0,0,0,5"/>
            <TextBlock x:Name="SKPathText" TextWrapping="Wrap" Margin="0,0,0,10"/>

            <TextBlock Text="NIB" />
            <Button Content="Upload File" Click="NIB_Click" Margin="0,0,0,5"/>
            <TextBlock x:Name="NIBPathText" TextWrapping="Wrap" Margin="0,0,0,10"/>

            <TextBlock Text="NPWP" />
            <Button Content="Upload File" Click="NPWP_Click" Margin="0,0,0,5"/>
            <TextBlock x:Name="NPWPPathText" TextWrapping="Wrap" Margin="0,0,0,10"/>

            <TextBlock Text="Document Pendukung 1" />
            <Button Content="Upload File" Click="Doc1_Click" Margin="0,0,0,5"/>
            <TextBlock x:Name="Doc1PathText" TextWrapping="Wrap" Margin="0,0,0,10"/>

            <TextBlock Text="Document Pendukung 2" />
            <Button Content="Upload File" Click="Doc2_Click" Margin="0,0,0,5"/>
            <TextBlock x:Name="Doc2PathText" TextWrapping="Wrap" Margin="0,0,0,10"/>

            <TextBlock Text="Document Pendukung 3" />
            <Button Content="Upload File" Click="Doc3_Click" Margin="0,0,0,5"/>
            <TextBlock x:Name="Doc3PathText" TextWrapping="Wrap" Margin="0,0,0,10"/>

            <TextBlock Text="Document Pendukung 4" />
            <Button Content="Upload File" Click="Doc4_Click" Margin="0,0,0,5"/>
            <TextBlock x:Name="Doc4PathText" TextWrapping="Wrap" Margin="0,0,0,10"/>

            <TextBlock Text="Document Pendukung 5" />
            <Button Content="Upload File" Click="Doc5_Click" Margin="0,0,0,5"/>
            <TextBlock x:Name="Doc5PathText" TextWrapping="Wrap" Margin="0,0,0,10"/>
            

            <Button Content="Save Company" Click="SaveCompany_Click" Height="30" Background="LightGreen"/>
        </StackPanel>
    </ScrollViewer>
</Window>
